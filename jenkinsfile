pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/siddha200340/SIMPLE-WEB-APP-CI-CD'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t devops-demo .'
            }
        }
        stage('Test') {
            steps {
                sh 'pytest --maxfail=1 --disable-warnings -q'
            }
        }
        stage('Deploy') {
            steps {
                sh 'bash scripts/deploy.sh'
            }
        }
    }
}
